<H1>プロフィール変更</H1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :area %>
  <%= f.text_field :area %>

  <%= f.submit "Edit", class: "btn btn-large btn-primary" %>
<% end %>
