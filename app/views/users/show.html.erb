<%= link_to "プロフィール変更", edit_user_path, class: "btn btn-large btn-primary" %>

<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table">
      <tbody>
        <tr>
          <th>Email</th>
          <td><%= @user.email %></td>
        </tr>
        <% if @user.area.present? %>
          <tr>
            <th>Area</th>
            <td><%= @user.area %></td>
          </tr>
        <% end %>
    	</tbody>
    </table>
  </div>
</div>